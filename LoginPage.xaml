<Window x:Class="PlaygroundReservation.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="400" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Email:" />
            <TextBox x:Name="EmailTextBox" Width="200" Margin="0,5" />
            <TextBlock Text="Password:" Margin="0,10,0,0" />
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,5" />
            <Button Content="Login" Click="LoginButton_Click" Margin="0,10" />
            <Button Content="Register" Click="RegisterButton_Click" Margin="0,5" />
        </StackPanel>
    </Grid>
    </Window>


