<Window x:Class="PlaygroundReservation.RegisterPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="400" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="First Name:" />
            <TextBox x:Name="FirstNameTextBox" Width="200" Margin="0,5" />
            <TextBlock Text="Last Name:" Margin="0,10,0,0" />
            <TextBox x:Name="LastNameTextBox" Width="200" Margin="0,5" />
            <TextBlock Text="Email:" Margin="0,10,0,0" />
            <TextBox x:Name="EmailTextBox" Width="200" Margin="0,5" />
            <TextBlock Text="Password:" Margin="0,10,0,0" />
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,5" />
            <Button Content="Register" Click="RegisterButton_Click" Margin="0,10" />
        </StackPanel>
    </Grid>
</Window>


